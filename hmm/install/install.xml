<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>JHmm</appname>
        <appversion>0.1</appversion>
        <authors>
            <author name="R. Alexander Milowski" email="alex@milowski.com"/>
        </authors>
        <url>http://www.milowski.com/math/hmm/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="license.txt"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="license.txt" targetdir="$INSTALL_PATH"/>
            <file src="hmmpredict.bat" targetdir="$INSTALL_PATH"/>
            <file src="hmmtrain.bat" targetdir="$INSTALL_PATH"/>
            <file src="hmmgenerate.bat" targetdir="$INSTALL_PATH"/>
            <file src="hmmpredict" targetdir="$INSTALL_PATH"/>
            <file src="hmmtrain" targetdir="$INSTALL_PATH"/>
            <file src="hmmgenerate" targetdir="$INSTALL_PATH"/>
            <file src="../jhmm-0.1/lib" targetdir="$INSTALL_PATH"/>
            <file src="../jhmm-0.1/examples" targetdir="$INSTALL_PATH"/>
            <file src="../jhmm-0.1/docs" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/hmmtrain"/>
            <parsable targetfile="$INSTALL_PATH/hmmpredict"/>
            <parsable targetfile="$INSTALL_PATH/hmmgenerate"/>
            <parsable targetfile="$INSTALL_PATH/hmmtrain.bat"/>
            <parsable targetfile="$INSTALL_PATH/hmmpredict.bat"/>
            <parsable targetfile="$INSTALL_PATH/hmmgenerate.bat"/>
            <executable targetfile="$INSTALL_PATH/hmmpredict" stage="never"/>
            <executable targetfile="$INSTALL_PATH/hmmtrain" stage="never"/>
            <executable targetfile="$INSTALL_PATH/hmmgenerate" stage="never"/>
        </pack>
    </packs>
    
</installation>
